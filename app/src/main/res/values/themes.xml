<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DasslerPro" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_B06DB5</item>
        <item name="colorPrimaryVariant">@color/purple_B06DB5</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_B06DB5</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/purple_B06DB5</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="bottomNavigationStyle">@style/BottomNav</item>
    </style>

    <!-- Text -->
    <style name="Header" parent="Theme.DasslerPro">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/scale_3x</item>
        <item name="android:textColor">@color/black_201E1E</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PromotionTitle" parent="Theme.DasslerPro">
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textSize">@dimen/scale_2x</item>
        <item name="android:textColor">@color/black_1A1919</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Tittle" parent="Theme.DasslerPro">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/scale_2.5x</item>
        <item name="android:textColor">@color/black_201E1E</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Button -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomButton.Purple">
        <item name="backgroundTint">@color/purple_7358A7</item>
    </style>

    <!-- Bottom navigation -->
    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/shape_ffffff_topradius_8dp</item>
    </style>

    <!-- Dialog -->
    <style name="Dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/shape_ffffff_rad_8dp</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowMinWidthMajor">75%</item>
        <item name="android:windowMinWidthMinor">75%</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Image -->
    <style name="ShapeAppearance.CornerTop_8" parent="">
        <item name="cornerSizeTopLeft">@dimen/dp_1x</item>
        <item name="cornerSizeTopRight">@dimen/dp_1x</item>
    </style>

</resources>